<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskList.MVVM.Views.PantallaDetalle"
             BackgroundColor="{StaticResource BackgroundBeige}">

    <VerticalStackLayout Padding="20">
        <Label Text="Editar Tarea"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="0,10,0,20" />
        <Entry Text="{Binding TareaSeleccionada.Nombre, Mode=TwoWay}" Placeholder="Nombre de la tarea" />
        <Button Text="Guardar Cambios" Command="{Binding GuardarCambiosCommand}" HorizontalOptions="Center" Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>



